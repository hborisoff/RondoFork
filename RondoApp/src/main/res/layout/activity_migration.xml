<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="14dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="State:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <TextView
        android:id="@+id/state"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="Account ID:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <TextView
        android:id="@+id/accountId"
        android:textSize="14dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="Account Token:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <TextView
        android:id="@+id/accountToken"
        android:textSize="14dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="Account Region:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <TextView
        android:id="@+id/accountRegion"
        android:textSize="14dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="Track GP Purchases:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <TextView
        android:id="@+id/trackGooglePlayPurchases"
        android:textSize="14dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="Attribute Mappings:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <Button
        android:id="@+id/attributeMappings"
        android:text="JSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="fill_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
        android:textSize="14dp"
        android:text="Forward FCM Messages:"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="right"/>
      <Button
        android:id="@+id/disableFcmForward"
        android:text="Disable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/buttonContainer"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    </LinearLayout>

  </LinearLayout>
</ScrollView>
